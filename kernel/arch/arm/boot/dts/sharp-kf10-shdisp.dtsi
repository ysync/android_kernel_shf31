/include/ "sharp-shdisp-bd6118gu.dtsi"
/include/ "sharp-shdisp-dsi-panel-columbus-video.dtsi"
/include/ "sharp-shdisp-columbus.dtsi"
/include/ "sharp-shdisp-subdisplay.dtsi"


&soc {
	sharp,shdisp_bd6118gu {
		status = "ok";
	};

	sharp,shdisp_columbus {
		status = "ok";
	};

	blsp5_spi: spi@f9927000 {
		sub_spi@0 {
			status = "ok";
		};
	};

	sharp,shdisp_subdisplay {
		status = "ok";
	};

};



&mdss_mdp {
	qcom,mdss-pref-prim-intf = "dsi";
};

&mdss_fb0 {
	qcom,memory-reservation-size = <0x800000>;
};

&dsi_shdisp_columbus {
	status = "ok";

	qcom,mdss-pan-physical-width-dimension = <42>;
	qcom,mdss-pan-physical-height-dimension = <74>;
};

&mdss_dsi0 {
	qcom,dsi-pref-prim-pan=<&dsi_shdisp_columbus>;

	/delete-property/ vdd-supply;
	/delete-property/ qcom,platform-reset-gpio;
	/delete-property/ qcom,platform-enable-gpio;

	/delete-node/ qcom,platform-supply-entry1;
};

&soc {
	mdss_mdp: qcom,mdss_mdp@fd900000 {
		mdss_fb0: qcom,mdss_fb_primary {
			qcom,memblock-reserve = <0x10000000 0x01000000>;
		};
	};
};
